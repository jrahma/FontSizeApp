<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FontSizeApp.Page2"
    Title="Page2">
    <VerticalStackLayout>
        <Label Text="Welcome to .NET MAUI!" VerticalOptions="Center" HorizontalOptions="Center" FontSize="{DynamicResource LabelFontSize}" />
        <Button Text="Close Me" FontSize="{DynamicResource LabelFontSize}" Clicked="CloseClicked" />
        <Label x:Name="LabelFontSizeInt" Text="{StaticResource LabelFontSize}" HorizontalOptions="Center" FontSize="{StaticResource LabelFontSize}" />
    </VerticalStackLayout>
</ContentPage>
